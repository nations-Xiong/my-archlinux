
imap <C-h> <LEFT>
imap <C-j> <DOWN>
imap <C-l> <RIGHT>
imap <C-k> <UP>
imap <C-D> <BACKSPACE>
imap <C-r> <DELETE>

syntax on

colorscheme desert

filetype on

set nu

set cursorline

set ruler

set showmatch

set incsearch

set autoindent

set cindent

set tabstop=4

set softtabstop=4 

set shiftwidth=4


